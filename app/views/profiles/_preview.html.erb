<turbo-frame id=<%= profile.id %>>
  <div class="card">
    <div class="card-header">
    </div>
    <div class="card-content">
      <div class="two-column">
        <div>
          <%= image_tag profile.user.avatar_url, class:"profile-avatar" %>
          <h3><%= profile.user.name %></h3>
        </div>
        <p class="m-auto"><%= profile.bio %></p>
      </div>
      <p>Batch #<%= profile.batch %></p>
      <h6>Languages</h6>
      <div class="languages">
        <% profile.languages.each do |language|%>
          <p><%= language.name %></p>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to "Edit", edit_profile_path(profile_id: profile.id) %>
</turbo-frame>
