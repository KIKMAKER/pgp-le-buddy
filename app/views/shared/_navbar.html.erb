<nav class="navbar is-link" data-controller="navbar">
  <div class="navbar-brand">
    <%= link_to root_path, class: "navbar-item" do %>
      <%= image_tag "lebuddy.png" %>
      <strong class="is-size-4 pl-2">le buddy</strong>
    <% end %>

    <a role="button" class="navbar-burger" data-navbar-target="burger" data-action="navbar#toggle">
      <span></span>
      <span></span>
      <span></span>
    </a>
  </div>

  <navbar-menu class="navbar-menu" data-navbar-target="menu">
      <div class="navbar-start">
        <% if user_signed_in? %>
          <%= link_to "BuddyUps", buddy_ups_path, class: "navbar-item" %>
          <%= link_to "Dashboard", dashboard_path, class: "navbar-item" %>
        <% end %>
        <div class="navbar-item has-dropdown is-hoverable mr-4">
          <%= link_to "More", "#", class: "navbar-link" %>
          <div class="navbar-dropdown is-left">
            <%= link_to "Meet the team", team_path, class: "navbar-item" %>
            <%= link_to "Terms of use", terms_path, class: "navbar-item" %>
            <%= link_to "Privacy policy", privacy_path, class: "navbar-item" %>
            <% if user_signed_in? %>
              <hr class="navbar-divider">
              <%= link_to "Send us feedback", new_app_feedback_path, class: "navbar-item" %>
            <% end %>
          </div>
        </div>
      </div>

    <div class="navbar-end">
      <% if user_signed_in? %>
        <div class="navbar-item has-dropdown is-hoverable mr-4">
          <%= link_to current_user.name, "#", id: "current_user_name", class: "navbar-link" %>
          <div class="navbar-dropdown is-right">
            <%= link_to "Profile", profile_path(current_user.profile), class: "navbar-item" %>
            <%= link_to "Messages", "#", class: "navbar-item" %>
            <% if current_user.admin %>
              <hr class="navbar-divider">
              <%= link_to "Admin control panel", admin_path, class: "navbar-item" %>
            <% end %>
            <hr class="navbar-divider">
            <%= link_to "Logout", destroy_user_session_path, class: "navbar-item", data: { turbo_method: :delete } %>
          </div>
        </div>
      <% end %>

      <% if not user_signed_in? %>
        <div class="navbar-item">
          <div class="buttons">
            <%= link_to "Sign up", new_user_registration_path, class: "button is-primary" %>
            <%= link_to "Login", new_user_session_path, class: "button is-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </navbar-menu>
</nav>
